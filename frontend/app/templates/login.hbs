<div class="the-box col-xs-6 col-xs-offset-3">
  <h2>Log in</h2> <br>
	<form {{action 'authenticate' on='submit'}}>
		<div class="form-group">
			<label for="identification">Email:</label>
			{{input value=identification placeholder='Enter Email' class="form-control"}}
		</div>
		<div class="form-group">
			<label for="password">Password:</label>
			{{input value=password placeholder='Enter Password' type='password' class="form-control"}}
		</div>
		<button type="submit" class="btn btn-success">Sign in</button>
	</form>
</div>