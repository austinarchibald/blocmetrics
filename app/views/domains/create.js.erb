<% if @domain.valid? %>
   $('.js-domains').append("<%= escape_javascript(render(@domain)) %>");
   $('.new-domain').html("<%= escape_javascript(render partial: 'new', locals: { user: @user, domain: @new_domain }) %>");
<% else %>
   $('.new-domain').html("<%= escape_javascript(render partial: 'new', locals: { domain: @domain }) %>");
<% end %>