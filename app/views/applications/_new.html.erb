<h5>Add a new item:</h5>

<div class="form-group">
  <%= form_for @application, remote: true do |f| %>
    <%= f.text_field :name, :class => 'form-control', placeholder: 'Application name' %>
    <%= f.text_field :url, :class => 'form-control', value: 'http://' %>
</div>

<div class="form-group">
  <%= f.submit "Add Item", :class => 'btn btn-primary' %>
</div>
<% end %>