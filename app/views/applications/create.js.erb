<% if @application.valid? %>
   $('.js-applications').append("<%= escape_javascript(render(@application)) %>");
   $('.new-application').html("<%= escape_javascript(render partial: 'new', locals: { user: @user, application: @new_application }) %>");
<% else %>
   $('.new-application').html("<%= escape_javascript(render partial: 'new', locals: { application: @application }) %>");
<% end %>